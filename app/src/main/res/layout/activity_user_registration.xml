<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegistrationActivity"
    android:background="@drawable/register_user_background"
    android:paddingTop="?attr/actionBarSize"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:id="@+id/welcome"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:background="@drawable/register_relative_layout_design"
        android:layout_marginTop="26dp"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please, Enter your personal info"
            android:id="@+id/message"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/twelve_dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="10dp"
            android:hint="Enter Your Name"
            android:paddingLeft="@dimen/twelve_dp"
            android:background="@drawable/edittext_design"
            android:id="@+id/name_textview"
            android:layout_below="@id/message"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@id/name_textview"
            android:layout_marginTop="10dp"
            android:hint="Enter Email Address"
            android:paddingLeft="@dimen/twelve_dp"
            android:background="@drawable/edittext_design"
            android:id="@+id/email_address_edittext"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@id/email_address_edittext"
            android:layout_marginTop="10dp"
            android:hint="Enter Mobile Number"
            android:paddingLeft="@dimen/twelve_dp"
            android:background="@drawable/edittext_design"
            android:id="@+id/phone_number_edittext"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@id/phone_number_edittext"
            android:layout_marginTop="10dp"
            android:hint="Enter Password"
            android:paddingLeft="@dimen/twelve_dp"
            android:background="@drawable/edittext_design"
            android:id="@+id/password_edittext"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@id/password_edittext"
            android:layout_marginTop="10dp"
            android:hint="Enter Confirm Password"
            android:paddingLeft="@dimen/twelve_dp"
            android:background="@drawable/edittext_design"
            android:id="@+id/confirm_password_edittext"/>
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I accept the terms of the agreements."
            android:layout_marginTop="@dimen/twelve_dp"
            android:layout_below="@id/confirm_password_edittext" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox"
            android:text="Sign up"
            android:onClick="openHomeActivity"
            android:textAllCaps="false"
            android:id="@+id/sign_up_button"
            android:layout_marginTop="@dimen/twelve_dp"
            android:background="@drawable/sign_in_button_design"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or Sign in"
            android:textSize="16sp"
            android:layout_below="@id/sign_up_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/twelve_dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:onClick="openLoginActivity"/>

    </RelativeLayout>
</RelativeLayout>